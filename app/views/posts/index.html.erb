<h1>All Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td>
          <%= link_to 'Show', post_path(post), class: 'btn btn-outline-primary' %>
          <%= link_to 'Edit', edit_post_path(post), class: 'btn btn-outline-info' %>
          <%= link_to 'Delete', post_path(post), method: :delete, class: 'btn btn-outline-danger', data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Post', new_post_path, class: 'btn btn-primary' %>
