<div class="container">
  <div class="row justify-content-center">
    <div class="col-8">
<%if @player.errors.any?%>
  <h2>The following errors prevented the player from being saved</h2>
  <ul>
  <% @player.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>
<%= form_with(model: player,class: "shadow p-3 mb-3 bg-light rounded") do |form| %>
    <div class="mb-3">
        <%= form.label :name,class:"col-2 form-label" %>
        <%= form.text_field :name, class: "form-control shadow rounded",placeholder: "Enter player name" %>
    </div>
    <div class="mb-3">
        <%= form.label :age,class:"col-2 form-label" %>
        <%= form.number_field :age, class: "form-control shadow rounded",placeholder: "Enter country name" %>
    </div>
    <div class="mb-3">
        <%= form.label :position ,class:"col-2 form-label"%>
        <%= form.text_field :position, class: "form-control shadow rounded",placeholder: "Enter founded year" %>
    </div>
    <div class="mb-3">
        <%= form.label :team_id,class:"col-2 form-label" %>
        <%= form.number_field :team_id, class: "form-control shadow rounded",placeholder: "Enter description " %>
    </div>

    <div class="mb-3">
        <%= form.label :role,class:"col-2 form-label" %>
        <%= form.text_field :role, class: "form-control shadow rounded",placeholder: "Enter description " %>
    </div>

    <div class="mb-3">
        <%= form.label :is_active,class:"col-2 form-label" %>
        <%= form.text_field :is_active, class: "form-control shadow rounded",placeholder: "Enter description " %>
    </div>

    <div class="mb-3">
        <%= form.label :is_captain,class:"col-2 form-label" %>
        <%= form.text_field :is_captain, class: "form-control shadow rounded",placeholder: "Enter description " %>
    </div>
    <div class="mb-3">
        <%= form.label :description,class:"col-2 form-label" %>
        <%= form.text_field :description, class: "form-control shadow rounded",placeholder: "Enter description " %>
    </div>
  <div>
    <%= form.submit "player ",class:"btn btn-outline-primary"  %>
  </div>
<% end %>
</div>
</div>
</div>
